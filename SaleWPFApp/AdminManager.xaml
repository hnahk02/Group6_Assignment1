<Window x:Class="SaleWPFApp.AdminManager"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SaleWPFApp"
        mc:Ignorable="d"
        Title="AdminManager" Height="450" Width="800">
    <Grid>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Background="AliceBlue" Height="200" Width="300">
            <TextBlock HorizontalAlignment="Center" FontSize="30" FontWeight="Bold">FStore</TextBlock>
            <Button Name="btnManageMember" Width="150" Height="20" Margin="0 20 0 0" Background="SkyBlue" FontWeight="DemiBold" Click="btnManageMember_Click">Manage Members</Button>
            <Button Name="btnManageProduct" Width="150" Height="20" Margin="20" Background="SkyBlue" FontWeight="DemiBold" Click="btnManageProduct_Click">Manage Products</Button>
            <Button x:Name="btnManageOrder" Width="150" Height="20" Background="SkyBlue" FontWeight="DemiBold" Click="btnManageOrder_Click" Content="Manage Orders"/>
        </StackPanel>
        <Label Content="Nguyen Thi An"  HorizontalAlignment="Right" VerticalAlignment="Bottom"/>
    </Grid>
</Window>
