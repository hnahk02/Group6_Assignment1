<Window x:Class="SaleWPFApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SaleWPFApp"
        mc:Ignorable="d"
        Title="Login" Height="450" Width="800">
    <Grid>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Background="AliceBlue" Height="200" Width="300">
            <TextBlock HorizontalAlignment="Center" FontSize="30" FontWeight="Bold">FStore</TextBlock>
            <Label HorizontalAlignment="Center" Width="200">Email</Label>
            <TextBox x:Name="txtEmail" HorizontalAlignment="Center" Width="200"></TextBox>
            <Label HorizontalAlignment="Center" Width="200">Password</Label>
            <PasswordBox x:Name="pwbPassword" HorizontalAlignment="Center" Width="200"></PasswordBox>
            <Button Width="100" Height="20" Margin="20" Background="SkyBlue" FontWeight="DemiBold" Click="Button_Click">Login</Button>
        </StackPanel>
        <Label Content="Nguyen Thi An" HorizontalAlignment="Right" VerticalAlignment="Bottom"/>
    </Grid>
</Window>
